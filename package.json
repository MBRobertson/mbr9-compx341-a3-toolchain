{
  "name": "WReport",
  "version": "0.0.1",
  "description": "Weather Report",
  "private": true,
  "dependencies": {
    "body-parser": "*",
    "bower": "^1.3.12",
    "ejs": "*",
    "express": "*",
    "request": "^2.65.0"
  },
  "engines": {
    "node": "4.2.1"
  },
  "devDependencies": {
    "chai": "^3.4.0",
    "mocha": "^2.3.3",
    "node-sass": "^4.12.0",
    "nyc": "^14.1.1",
    "rewire": "^2.3.4",
    "saucelabs": "^1.0.1",
    "selenium-webdriver": "2.44.0",
    "sinon": "^1.17.7",
    "supertest": "^1.1.0"
  },
  "scripts": {
    "start": "node app.js",
    "test": "mocha --reporter=json > test/mochatest.json",
    "test-fvt": "mocha test-fvt --reporter=json > test-fvt/mochafvt.json",
    "test-cov": "nyc --reporter=json --reporter=json-summary --report-dir=test/coverage --temp-dir=test/.nyc_output npm run test",
    "clean-test": "rm -rf test/.nyc_output test/coverage test/mochatest.json",
    "clean-test-fvt": "rm -rf test-fvt/mochafvt.json",
    "build-sass": "node-sass static/sass/ -o static/built/css/",
    "bower": "bower install",
    "setup": "npm run bower && npm run build-sass",
    "clean-setup": "rm -rf static/built/ static/bower_components",
    "clean": "npm run clean-test && npm run clean-test-fvt && npm run clean-setup"
  }
}
